<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".auth.LoginActivity">
    <ImageButton android:background="@drawable/bg_rounded_white" android:layout_width="200dp"
                 android:padding="12dp"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_google_logo_colour" app:layout_constraintEnd_toEndOf="parent"
                 android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                 app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:id="@+id/sign_in_button"
            android:elevation="2dp"
            android:background="@drawable/bg_rounded_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:orientation="horizontal"
            android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent">
        <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:layout_marginRight="16dp" android:src="@drawable/ic_google_logo_colour"/>
        <TextView style="@style/TextNormal" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Continue with Google"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>