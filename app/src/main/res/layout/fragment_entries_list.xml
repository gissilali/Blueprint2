              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView android:background="@color/colorGreyLighter"
                                               android:layout_width="match_parent"
                                               android:id="@+id/list_fragment_entries_recent_entries"
                                               android:layout_height="wrap_content"
                                               android:layout_marginBottom="24dp"
                                               android:nestedScrollingEnabled="false"
                                               android:layout_marginTop="0dp"
                                               app:layout_constraintTop_toBottomOf="@+id/layout_fragment_dashboard_entry_filter">

    </androidx.recyclerview.widget.RecyclerView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/makende"/>
