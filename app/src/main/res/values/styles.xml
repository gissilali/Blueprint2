<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>
    <!-- Text Styles -->
    <style name="TextLabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextLabel</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
    </style>
    <style name="TextSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/proxima_nova_reg</item>
    </style>
    <style name="TextNormal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/proxima_nova_reg</item>
    </style>
    <style name="TextNumberLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>
    <style name="TextCurrencySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>
    <style name="TextNumberNormal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>
    <style name="TextHeading">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
    </style>
    <style name="TextLinkSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/linkBlue</item>
        <item name="android:fontFamily">@font/proxima_nova_medium</item>
    </style>
    <!-- End of Text Styles -->
    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog"/>
</resources>
